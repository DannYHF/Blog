@model IEnumerable<IdentityRole>
<!--All roles-->
<h2>Список ролей</h2>
<table class="table">
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<a class="nav-link active" asp-action="Create" asp-controller="Roles">Добавить роль</a>
<a class="nav-link active" asp-action="Index" asp-controller="Users">Список пользователей</a>