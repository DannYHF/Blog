@model IEnumerable<ListViewModel>
    <div class="row tm-row">
        @foreach (var item in Model)
        {
            <article class="col-12 col-md-6 tm-post">
                <hr class="tm-hr-primary">
                <a href="@Url.RouteUrl(new {controller = "Articles", action = "Show",  ArticleId = item.Article.Id})"
                   class="effect-lily tm-post-link tm-pt-60">
                    <div class="tm-post-link-inner">
                        <img src="@item.Article.PictureLink" alt="Image" class="img-fluid">
                    </div>
                    @if (DateTime.Now < item.Article.CreateTime.AddDays(1))
                    {
                        <span class="position-absolute tm-new-badge">New</span>
                    }
                    <h2 class="tm-pt-30 tm-color-primary tm-post-title">@item.Article.Headline</h2>
                </a>
                <p class="tm-pt-30">
                    @item.Article.ShortDescription
                </p>
                <div class="d-flex justify-content-between tm-pt-45">
                    <span class="tm-color-primary">@item.Article.CreateTime.ToString("D")</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between">

                    <span>Comments: @item.CountComments</span>
                    <span><!--Add creators name--></span>
                </div>
            </article>
        }
    </div>